<script>
const words = ["Data", "Model", "Prediction"];
let timeLeft = 60;
let timer;

function shuffle(arr) {
  return arr.sort(() => Math.random() - 0.5);
}

function createCards() {
  const cardsDiv = document.getElementById("cards");
  cardsDiv.innerHTML = "";
  shuffle([...words]).forEach(word => {
    const div = document.createElement("div");
    div.className = "card";
    div.textContent = word;
    div.draggable = true;
    div.addEventListener("dragstart", dragStart);
    cardsDiv.appendChild(div);
  });
}

function dragStart(e) {
  e.dataTransfer.setData("text/plain", e.target.textContent);
}

document.querySelectorAll(".slot").forEach(slot => {
  slot.addEventListener("dragover", e => e.preventDefault());
  slot.addEventListener("drop", drop);
});

function drop(e) {
  e.preventDefault();
  const text = e.dataTransfer.getData("text/plain");
  e.target.textContent = text;
  checkAnswer();
}

function checkAnswer() {
  const slots = document.querySelectorAll(".slot");
  let correct = true;
  slots.forEach(slot => {
    if (!slot.textContent) return;
    if (slot.textContent === slot.dataset.answer) {
      slot.classList.add("correct");
      slot.classList.remove("wrong");
    } else {
      slot.classList.add("wrong");
      slot.classList.remove("correct");
      correct = false;
    }
  });

  if ([...slots].every(s => s.textContent)) {
    if (correct) {
      document.getElementById("status").textContent = "üéâ ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! AI ‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡πÅ‡∏•‡πâ‡∏ß!";
      clearInterval(timer);
    } else {
      document.getElementById("status").textContent = "‚ùå ‡∏•‡∏≥‡∏î‡∏±‡∏ö‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å ‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà!";
    }
  }
}

function startTimer() {
  clearInterval(timer);
  timeLeft = 60;
  document.getElementById("time").textContent = timeLeft;
  timer = setInterval(() => {
    timeLeft--;
    document.getElementById("time").textContent = timeLeft;
    if (timeLeft <= 0) {
      clearInterval(timer);
      document.getElementById("status").textContent = "‚è∞ ‡∏´‡∏°‡∏î‡πÄ‡∏ß‡∏•‡∏≤! ‡∏Å‡∏î‡πÄ‡∏•‡πà‡∏ô‡πÉ‡∏´‡∏°‡πà";
    }
  }, 1000);
}

function resetGame() {
  document.querySelectorAll(".slot").forEach(slot => {
    slot.textContent = "";
    slot.classList.remove("correct", "wrong");
  });
  document.getElementById("status").textContent = "";
  createCards();
  startTimer();
}

resetGame();
</script>

